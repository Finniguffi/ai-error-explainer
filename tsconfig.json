{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "include": ["src/**/*.ts"]
}
